# Modified version of https://github.com/ruby/ruby/blob/master/.editorconfig

root = true

[*]
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.rb]
indent_size = 2

[*.gemspec]
indent_size = 2

[*.yml]
indent_size = 2
